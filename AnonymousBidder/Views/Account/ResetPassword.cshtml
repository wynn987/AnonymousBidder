@model AnonymousBidder.Common.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reset Password</title>
    <link rel="shortcut icon" href="~/Content/Images/Others/AnonymousBidderFavicon.ico" />
    @Styles.Render("~/Style/css")
</head>
<body>
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="container signin-page">
            <div class="signin-logo">
                <img src="~/Content/Images/Signin/AnonymousBidderLogoSignin.png" alt="AnonymousBidder Logo" />
            </div>
            <div class="box">
                <div class="form-section clearfix">
                    <h4 class="pull-left">Reset Password</h4>
                </div>
                <hr>
                <div class="form-section clearfix">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)
                    <div class="form-group paddingleft">
                        <label>Email Address</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    <div class="form-group paddingleft">
                        <label>New Password</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        <ul class="instruction-message">
                            <li>Strong password required.</li>
                            <li>Enter 8-16 characters.</li>
                            <li>Combine uppercase letters, lowercase letters, numbers, and symbols.</li>
                        </ul>
                    </div>
                    <div class="form-group paddingleft">
                        <label>Confirm New Password</label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                    <div class="form-group paddingleft">
                        <input type="submit" class="btn btn-signin" value="Reset Password" />
                    </div>
                    <div class="form-group paddingleft">
                        <div class="pull-left forgot-pass">
                            @Html.ActionLink("Back to Log in Page", "Login")
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer>
            <div class="container signin-page">
                <div class="pull-right">© @DateTime.Now.Year.ToString() AnonymousBidder - All Rights Reserved</div>
            </div>
        </footer>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>